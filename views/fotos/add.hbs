                            <input type="url" class="form-control" name="url" placeholder="URL de la foto">
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion"cols="3" placeholder="Una breve descripcion" class="form-control"></textarea>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">  
                                <i class="fas fa-save"></i>
