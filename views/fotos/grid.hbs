<div class="container p-4">
    <div class="row">
        {{#each fotos}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div>
                        <a href="/fotos/dislikes/{{id}}"> <i class="fas fa-cross"> <p>{{dislikes}}</p></i></a>
                        <a href="/fotos/likes/{{id}}"> <i class="fas fa-heart"><p>{{likes}}</p></i></a>
                    </div>
                    <h3 class="card-title text-uppercase">{{titulo}}</h3>
                    <img src="{{url}}" class="m-2">
                    <p>{{descripcion}}</p>
                    <a href="/fotos/delete/{{id}}" class="btn btn-danger"><i class="fas fa-trash"></i></a> 
                    <a href="/fotos/edit/{{id}}" class="btn btn-secondary"> <i class="fas fa-pen"></i></a>    
                </div>
            </div>
