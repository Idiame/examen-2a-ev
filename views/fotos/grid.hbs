<div class="container p-4">
    <div class="row">
        {{#each url}}
            <div class="col-md-3">
                <div class="card text-center">
                    <h3 class="card-title text-uppercase">{{titulo}}</h3>
                    <img src="{{fotos_url}}" class="m-2">
                    <a href="/fotos/borrar/{{id}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>     
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay fotos todavia</p>
                    <a href="/fotos/add">Añade tus fotos aquí!</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>